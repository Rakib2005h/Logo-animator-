function generateAnimation() {
    const textPrompt = document.getElementById('textPrompt').value;
    const imageFile = document.getElementById('imageUpload').files[0];
    const preview = document.getElementById('preview');

    // প্রিভিউ ক্লিয়ার
    preview.innerHTML = '';
    preview.className = '';

    if (!textPrompt && !imageFile) {
        alert("টেক্সট বা ছবি ইনপুট দিন");
        return;
    }

    if (imageFile) {
        // ইমেজ প্রসেসিং
        const reader = new FileReader();
        reader.onload = function(e) {
            const img = document.createElement('img');
            img.src = e.target.result;
            img.style.maxWidth = '100%';
            img.style.maxHeight = '100%';
            preview.appendChild(img);
            applyAnimation(textPrompt, preview);
        };
        reader.readAsDataURL(imageFile);
    } else {
        // টেক্সট লোগো তৈরি
        const textElement = document.createElement('h2');
        textElement.textContent = textPrompt;
        preview.appendChild(textElement);
        applyAnimation(textPrompt, preview);
    }
}

function applyAnimation(description, element) {
    // ডিফল্ট অ্যানিমেশন রিমুভ
    element.classList.remove('spin', 'fade');

    // ইউজারের ডেস্ক্রিপশন অনুযায়ী অ্যানিমেশন অ্যাপ্লাই
    if (description.includes('ঘূর্ণন') || description.includes('spin')) {
        element.classList.add('spin');
    } 
    else if (description.includes('ফেড') || description.includes('fade')) {
        element.classList.add('fade');
    }
}

// ডেমো ফাংশন (একটুয়াল ইমপ্লিমেন্টেশনের জন্য লাইব্রেরি প্রয়োজন)
function downloadAsGIF() {
    alert("GIF ডাউনলোডের ফিচারটি একটিভেট করা হবে!");
}

function downloadAsMP4() {
    alert("MP4 ডাউনলোডের ফিচারটি একটিভেট করা হবে!");
}
